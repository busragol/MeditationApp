<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetayActivity"
    android:background="#03A9F4">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ImageDetay"
        android:src="@drawable/splashscreen"
        android:layout_above="@+id/seekBarPlay"
        android:padding="10dp"
        android:layout_margin="30dp"></ImageView>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/seekBarPlay"
        android:layout_centerVertical="true"></SeekBar>
    <TextView
        android:id="@+id/textbaÅŸ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:layout_below="@+id/seekBarPlay"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textColor="#f5dbe8"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textson"
        android:text="00:00:00"
        android:layout_below="@+id/seekBarPlay"
        android:layout_alignParentRight="true"
        android:textColor="#f5dbe8"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        ></TextView>
    <Button
        android:id="@+id/playButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/seekBarPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/play"></Button>
    <Button
        android:id="@+id/favoriButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/playButton"
        android:layout_margin="65dp"
        android:text="Favorilere Ekle"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="#f5dbe8"
        android:gravity="center"></Button>
</RelativeLayout>